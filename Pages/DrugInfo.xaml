            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="24,24,0,0">
                <Ellipse Width="192" Height="192" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Images/avatar_ex.png" x:Name="DrugImage"/>
                    </Ellipse.Fill>
                </Ellipse>

                <StackPanel Margin="8,0,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Margin" Value="0,8,0,0"/>
                        </Style>
                    </StackPanel.Resources>
                    
                    <TextBlock Text="Описание: лекарственное средство, оказывающее обезболивающее, жаропонижающее, противовоспалительное действие. Также ацетилсалициловая кислота является блокатором циклооксигеназы тромбоцитов (не путать с антикоагулянтами)." Width="484" TextWrapping="WrapWithOverflow" FontSize="18"
                               x:Name="DrugDescription"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Тип: "/>
                        <TextBlock Text="Таблетки" x:Name="DrugType"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Цена: "/>
                        <TextBlock Text="89.99" x:Name="DrugCost"/>
                        <TextBlock Text="₽"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <Button Width="192" Height="32" Margin="0,0,0,24" VerticalAlignment="Bottom"
                    Style="{StaticResource CornerBackground}" Background="{StaticResource DarkGray}"
                    Click="GoBack">
                <TextBlock Text="Назад"/>
